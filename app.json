{
  "expo": {
    "name": "TuneFlip",
    "slug": "tuneflip",

    // keep your current "version": "1.0.0" if you're OTAâ€™ing for old APKs
    "version": "1.0.0",

    "scheme": "tuneflip",                 // custom scheme: tuneflip://...

    "android": {
      "icon": "./assets/tuneflip-icon-1024.png",
      "package": "com.alonso.tuneflip",
      "versionCode": 1,

      // App Links for https://tuneflip.app/track...
      "intentFilters": [
        {
          "action": "VIEW",
          "category": ["BROWSABLE", "DEFAULT"],
          "data": [
            { "scheme": "https", "host": "tuneflip.app", "pathPrefix": "/track" }
          ]
        }
      ]
    },

    // iOS Universal Links (takes effect on next iOS build)
    "ios": {
      "icon": "./assets/tuneflip-icon-1024.png",
      "associatedDomains": ["applinks:tuneflip.app"]
    },

    "runtimeVersion": { "policy": "appVersion" },
    "updates": {
      "url": "https://u.expo.dev/b8b54ac3-8372-4c80-8b3f-22dedb3194c4",
      "enabled": true
    },
    "extra": {
      "eas": { "projectId": "b8b54ac3-8372-4c80-8b3f-22dedb3194c4" }
    }
  }
}


